<div class="container">

<h1 class="text-center mt-5 mb-3"> <%= current_user.name %>'s bag! ðŸ™Œâœ¨ </h1>

<% if current_user %>
  <div class="text-center">
    <%= link_to "New Bag", new_user_bag_path, class: "btn btn-outline-success btn-lg my-3" %>
  </div>
<% end %>
<% if @bags.empty? %>
  <div class="container text-center mt-5">
    <%= link_to "Bag Check!", bags_path, class: "btn btn-outline-primary btn-lg px-5 py-3" %>  
  </div>
<% end %>

<div class="accordion mb-3" id="accordionExample">
  
  <% @bags.each_with_index do |bag, i| %>
    
  <div class="accordion-item">
    <h2 class="accordion-header" id="heading_<%=i%>">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_<%=i%>" aria-expanded="false" aria-controls="collapseOne">
        <%= bag.name %>
      </button>
    </h2>
    <div id="collapse_<%=i%>" class="accordion-collapse collapse" aria-labelledby="heading_<%=i%>" data-bs-parent="#accordionExample">
      <div class="accordion-body text-center mx-auto gap-5">
        
        <% if params[:user_id] || logged_in? %>
          <%= link_to "Show", user_bags_path(current_user), class: "btn btn-warning btn-lg mx-3 px-5", style: "width: 150px;" %>
        <% else %>
          <%= link_to "Show", bags_path(current_user), class: "btn btn-warning btn-lg mx-3 px-5", style: "width: 150px;" %>
        <% end %>
        <% if current_user %>
          <!--%= link_to "Edit", edit_user_bag_path(current_user), class: "btn btn-dark btn-lg mx-3 px-5", style: "width: 150px;" %>
          <!-- %= link_to "Delete", @bags, class: "btn btn-danger btn-lg mx-3 px-5", style: "width: 150px;", method: :delete, data: { confirm: 'Are you certain you want to delete this bag?' } %>
          --->
        <% end %>
      </div>
    </div>
  </div>

  <% end %>

</div>

</div>
